<body>
    <!-- Breadcrumbs -->
    <div class="breadcrumbs">
        <div class="container">
            <div class="row">
                <div class="col">
                    <p class="bread"><span><a href="/">Home</a></span> / <span>Orders</span></p>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <h1>MY ORDERS</h1>
                </div>
            </div>
        </div>
    </div>

    <!-- Account Section -->
    <div class="container account-section">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 sidebar">
                <ul class="list-unstyled">
                    <li><a href="/profile">Account Details</a></li>
                    <li><a href="/orderList">Orders</a></li>
                    <li><a href="#">Wallet</a></li>
                    <li><a href="#">Downloads</a></li>
                    <li><a href="/address">Addresses</a></li>
                    <li><a href="#">Sign Out</a></li>
                </ul>
            </div>

            <!-- Main Content -->
            <div class="col-md-9">
                <div class="card shadow-sm mb-4 border-0">
                    <div class="card-body p-4">
                        <h4 class="card-title mb-4 text-primary">Order List</h4>

                        <div class="table-responsive mt-4">
                            <table class="table table-hover">
                                <thead class="thead-light">
                                    <tr>
                                        <th>Order ID</th>
                                        <th>Date</th>
                                        <th>Status</th>
                                        <th>Total Amount</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% orders.forEach(order => { %>
                                        <tr>
                                            <td><a href="/loadProfileOrderDetails/<%= order._id %>"><%= order.orderId %></a></td>
                                          
                                            <td><%= new Date(order.orderDate).toLocaleDateString() %></td>
                                            <td><%= order.products[0].status %></td>
                                            <td>&#8377;<%= order.totalAmount %></td>
                                            <td>
                                                <% if (order.products[0].status === 'Cancelled') { %>
                                                    <!-- Do not show any button if the status is 'Cancelled' -->
                                                <% } else if (order.products[0].status === 'Delivered') { %>
                                                    <button data-action="/returnOrder/<%= order._id %>" class="btn btn-outline-primary btn-sm action-btn">Return</button>
                                                <% } else { %>
                                                    <button data-action="/cancelOrder/<%= order._id %>" class="btn btn-outline-danger btn-sm action-btn">Cancel</button>
                                                <% } %>
                                            </td>
                                            
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>



<script>
    document.addEventListener('DOMContentLoaded', () => {
        document.querySelectorAll('.action-btn').forEach(button => {
            button.addEventListener('click', function() {
                const actionUrl = this.getAttribute('data-action');

                Swal.fire({
                    title: 'Are you sure?',
                   
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, proceed!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = actionUrl;
                    }
                });
            });
        });
    });
</script>

