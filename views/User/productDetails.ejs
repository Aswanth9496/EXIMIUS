    <style>
        .product__details__pic .container {
    display: flex;
    flex-wrap: wrap;
}

.thumbnail-images {
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.thumbnail-item {
    display: flex;
    justify-content: center;
    align-items: center;
}

.thumbnail-image {
    width: 100%;
    max-width: 100px;
    border-radius: 10px;
    cursor: pointer;
    transition: transform 0.3s ease;
}

.thumbnail-image:hover {
    transform: scale(1.1);
}

.main-image {
    display: flex;
    justify-content: center;
    align-items: center;
}

.main-image-img {
    border-radius: 10px;
    object-fit: cover;
    max-height: 500px;
    width: 100%;
}

@media (max-width: 768px) {
    .product__details__pic .container {
        flex-direction: column;
    }

    .thumbnail-images {
        flex-direction: row;
        overflow-x: auto;
        gap: 5px;
    }

    .thumbnail-image {
        max-width: 80px;
    }

    .main-image-img {
        max-height: 300px;
    }
}

    </style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        // Get all thumbnail images
        const thumbnails = document.querySelectorAll('.thumbnail-image');
        // Get the main image element
        const mainImage = document.getElementById('mainImage');

        // Add click event listener to each thumbnail
        thumbnails.forEach(thumbnail => {
            thumbnail.addEventListener('click', (event) => {
                // Get the full-size image URL from the data attribute
                const fullSizeImageUrl = event.target.getAttribute('data-full-size');
                // Update the main image src attribute
                mainImage.setAttribute('src', fullSizeImageUrl);
            });
        });
    });
</script>

