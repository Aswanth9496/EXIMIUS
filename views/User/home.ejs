<!-- Product Section Begin -->
<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="filter__controls">
                    <li class="active" data-filter="*">Best Sellers</li>
                    <li data-filter=".new-arrivals">New Arrivals</li>
                    <li data-filter=".hot-sales">Hot Sales</li>
                </ul>
            </div>
        </div>
        <div class="row product__filter">
            <% products.forEach(function(product) { %>
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="product__item">
                        <div class="product__item__pic set-bg" style="background-image: url('/productIMG/<%= product.productimages[0] %>');">
                            <% if (product.new) { %>
                                <span class="label">New</span>
                            <% } else if (product.sale) { %>
                                <span class="label">Sale</span>
                            <% } %>
                            <ul class="product__hover">
                                <li><a href="#"><img src="img/icon/heart.png" alt=""></a></li>
                                <li><a href="#"><img src="img/icon/compare.png" alt=""> <span>Compare</span></a></li>
                                <li><a href="#"><img src="img/icon/search.png" alt=""></a></li>
                            </ul>
                        </div>
                        <div class="product__item__text">
                            <h6><%= product.name %></h6>
                            <a href="/cart/add/<%= product._id %>" class="add-cart">+ Add To Cart</a>
                            <div class="rating">
                                <% for (let i = 0; i < product.rating; i++) { %>
                                    <i class="fa fa-star"></i>
                                <% } %>
                                <% for (let i = product.rating; i < 5; i++) { %>
                                    <i class="fa fa-star-o"></i>
                                <% } %>
                            </div>
                            <h5>Rs:<%= product.price.toFixed(2) %></h5>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</section>
