    <script>
      document.addEventListener('DOMContentLoaded', () => {
    const statusModal = new bootstrap.Modal(document.getElementById('statusModal'));
    const updateStatusButton = document.getElementById('updateStatusButton');

    // Attach click event listener to all update buttons
    document.querySelectorAll('.update-status-btn').forEach(button => {
        button.addEventListener('click', function() {
            const orderId = this.getAttribute('data-order-id');
            const productId = this.getAttribute('data-product-id');
            
            // Store order and product IDs in data attributes of the modal
            const statusForm = document.getElementById('statusForm');
            statusForm.setAttribute('data-order-id', orderId);
            statusForm.setAttribute('data-product-id', productId);

            // Show the modal
            statusModal.show();
        });
    });

    // Handle status update
    updateStatusButton.addEventListener('click', async () => {
        const statusForm = document.getElementById('statusForm');
        const orderId = statusForm.getAttribute('data-order-id');
        const productId = statusForm.getAttribute('data-product-id');
        const status = document.getElementById('orderStatus').value;

        try {
            const response = await fetch('/admin/updateOrderStatus', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ orderId, productId, status }),
            });

            const result = await response.json();

            if (result.success) {
                // Optionally, you can refresh the page or update the UI to reflect the changes
                window.location.reload();
            } else {
                alert(result.message);
            }
        } catch (error) {
            console.error('Error updating status:', error);
        } finally {
            statusModal.hide();
        }
    }); 
});

  </script>
  
  
      



