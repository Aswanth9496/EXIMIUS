<script>
  $(document).ready(function() {
      $('#dateRangeSelect').on('change', function() {
          const selectedRange = $(this).val();
          fetchSalesData(selectedRange);
      });
      
      function fetchSalesData(dateRange) {
          $.ajax({
              url: '/admin/salesfilter',
              method: 'GET',
              data: { dateRange },
              success: function(data) {
                  updateSalesTable(data.salesData);
                  updateSalesSummary(data.totalOrders, data.totalDiscount, data.totalSalesAmount);
              },
              error: function(err) {
                  console.error('Error fetching sales data:', err);
              }
          });
      }
  
      function updateSalesTable(salesData) {
          const tbody = $('table tbody');
          tbody.empty();
          if (salesData.length === 0) {
              tbody.append('<tr><td colspan="7" class="text-center">No sales data available</td></tr>');
          } else {
              salesData.forEach(sale => {
                  tbody.append(`
                      <tr>
                          <td>${sale.orderId}</td>
                          <td>${sale.address.addressName}</td>
                          <td>${new Date(sale.orderDate).toLocaleDateString()}</td>
                          <td>RS: ${sale.totalAmount.toFixed(2)}</td>
                          <td>${sale.paymentMethod}</td>
                          <td>${sale.paymentStatus}</td>
                          <td>${sale.products[0]?.status || 'N/A'}</td>
                      </tr>
                  `);
              });
          }
      }
  
      function updateSalesSummary(totalOrders, totalDiscount, totalSalesAmount) {
          $('.total-orders').text(totalOrders);
          $('.total-discount').text(`RS: ${totalDiscount.toFixed(2)}`);
          $('.total-sales-amount').text(`RS: ${totalSalesAmount.toFixed(2)}`);
      }
  });
  </script>

  
  
  <script>
    function filterSales() {
        const selectedRange = document.getElementById('dateRangeSelect').value;

        // Make an AJAX call to your backend to fetch filtered sales data
        $.ajax({
            url: '/admin/salesfilter',  // Update this URL to your endpoint for fetching sales data
            method: 'GET',
            data: { dateRange: selectedRange },
            success: function(response) {
                // Assuming response contains new sales data and relevant variables
                // Update the table and other elements accordingly
                const salesData = response.salesData;  // Update based on your response structure
                const totalOrders = response.totalOrders;  // Update based on your response structure
                const totalDiscount = response.totalDiscount;  // Update based on your response structure
                const totalSalesAmount = response.totalSalesAmount;  // Update based on your response structure

                // Update the sales data table
                const tbody = $('table tbody');
                tbody.empty(); // Clear existing rows

                if (salesData.length === 0) {
                    tbody.append('<tr><td colspan="7" class="text-center">No sales data available</td></tr>');
                } else {
                    salesData.forEach(sale => {
                        tbody.append(`
                            <tr>
                                <td>${sale.orderId}</td>
                                <td>${sale.address.addressName}</td>
                                <td>${new Date(sale.orderDate).toLocaleDateString()}</td>
                                <td>RS: ${sale.totalAmount.toFixed(2)}</td>
                                <td>${sale.paymentMethod}</td>
                                <td>${sale.paymentStatus}</td>
                                <td>${sale.products[0]?.status || 'N/A'}</td>
                            </tr>
                        `);
                    });
                }

                // Update summary cards
                $('.total-orders').text(totalOrders);
                $('.total-discount').text(`RS: ${totalDiscount.toFixed(2)}`);
                $('.total-sales-amount').text(`RS: ${totalSalesAmount.toFixed(2)}`);
            },
            error: function(error) {
                console.error("Error fetching sales data:", error);
            }
        });
    }
</script>


