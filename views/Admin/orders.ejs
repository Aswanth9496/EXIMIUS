      <body>
        <div class="main-panel">
            <div class="content-wrapper">
                <div class="row">
                    <div class="col-12 text-center mb-4">
                        <h2>Order Management</h2>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Orders</h4>
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Order ID</th>
                                               
                                                <th>Status</th>
                                                <th>Ordered Date</th>
                                                <th>Total Amount</th>
                                                <th>View</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% orders.forEach(order => { %>
                                                <tr>
                                                    <td><%= order.orderId %></td>
                                                   
                                                    <td>
                                                        <label class="badge badge-gradient-<%= order.paymentStatus === 'Success' ? 'success' : order.paymentStatus === 'Pending' ? 'warning' : 'danger' %>">
                                                            <%= order.paymentStatus %>
                                                        </label>
                                                    </td>
                                                    <td><%= order.orderDate.toISOString().split('T')[0] %></td> <!-- Display order date -->
                                                    <td><%= order.totalAmount.toFixed(2) %></td> <!-- Display total amount -->
                                                    <td><a href="/admin/orderDetails/<%= order._id %>" class="btn btn-info">View</a></td> <!-- Link to view order details -->
                                                </tr>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                                
                                <!-- Pagination controls (if needed) -->
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        
  

